<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blttrs" >

    <uses-sdk android:minSdkVersion="18" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".activity.DeviceScanActivity"
            android:configChanges="keyboardHidden"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.BTTrsActivity"
            android:label="@string/title_activity_bttrs"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <service android:name=".service.BluetoothLeService" />

        <activity
            android:name=".activity.dialog.SetPwdActivity"
            android:label="@string/title_activity_set_pwd"
            android:theme="@style/dialogTheme" >
        </activity>
        <activity
            android:name=".activity.dialog.SetNameActivity"
            android:label="@string/title_activity_set_name"
            android:theme="@style/dialogTheme" >
        </activity>
    </application>

</manifest>

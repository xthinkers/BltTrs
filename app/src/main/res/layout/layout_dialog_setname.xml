<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_common_white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_common_white"
        android:gravity="center"
        android:text="设置蓝牙名称"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/color_common_black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_common_gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="请输入新名字"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/color_common_black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_common_gray"/>

    <EditText
        android:id="@+id/edt_setname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/color_text_1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_common_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_submit_setname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="确认"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_text_2"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_cancel_setname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="取消"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_text_2"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:header = "http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_owner_info"
    tools:context="com.blttrs.activity.OwnerInfoActivity"
    android:orientation="vertical">

    <com.blttrs.widget.HeaderView
        android:id="@+id/header_ownerinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        header:headtitle="@string/title_owner_info"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/avatar_default"
            android:padding="16dp"
            android:layout_marginTop="@dimen/fab_margin"/>

        <TextView
            android:id="@+id/tv_connect_status"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:text="连接成功"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#99000000"
            />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:textColor="@color/color_gray_weight"
            android:text="搜索蓝牙或WIFI"/>

    </FrameLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/tv_record"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/tv_camera"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="10dp"
            />

    </LinearLayout>

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_contacts_one"
                android:layout_width="72dp"
                android:layout_height="72dp" />
            <TextView
                android:id="@+id/tv_phone1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:text="电话A"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_contacts_two"
                android:layout_width="72dp"
                android:layout_height="72dp" />
            <TextView
                android:id="@+id/tv_phone2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:text="电话B"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_contacts_three"
                android:layout_width="72dp"
                android:layout_height="72dp"
                />
            <TextView
                android:id="@+id/tv_phone3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:text="电话C"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

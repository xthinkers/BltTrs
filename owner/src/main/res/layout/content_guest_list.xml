<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.owner.GuestListActivity"
    tools:showIn="@layout/activity_guest_list">

    <com.owner.widget.HeaderView
        android:id="@+id/hv_guestlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headtitle="@string/title_activity_guest_list" />

    <ListView
        android:id="@+id/gv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:horizontalSpacing="@dimen/common_padding_5"
        android:numColumns="3"
        android:divider="@null"
        android:padding="@dimen/activity_horizontal_margin"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/common_padding_5" />

</LinearLayout>
